<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="DuplicateDefinition">
    <!-- Base application theme -->
    <style name="Theme.TaxiMeter" parent="Theme.MaterialComponents.DayNight.NoActionBar" tools:ignore="DuplicateDefinition">
        <item name="colorPrimary">@color/taxi_yellow</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/taxi_yellow</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.TaxiMeter.Splash" parent="Theme.TaxiMeter">
        <item name="android:windowBackground">@color/taxi_yellow</item>
        <item name="android:statusBarColor">@color/taxi_yellow</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.TaxiMeter.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Widget.TaxiMeter.Button.Primary" parent="Widget.TaxiMeter.Button">
        <item name="backgroundTint">@color/taxi_yellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="Widget.TaxiMeter.Button.Secondary" parent="Widget.TaxiMeter.Button">
        <item name="backgroundTint">@color/blue</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.TaxiMeter.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.TaxiMeter.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.TaxiMeter.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.TaxiMeter.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.TaxiMeter.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>