<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Carte Compteur Digital Semi-Transparente -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMeterDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DD000000"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_taxi"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.15"
                    android:text="TAXIMÈTRE"
                    android:textColor="@color/taxi_yellow"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnProfile"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/driver_profile"
                    android:padding="4dp"
                    android:src="@drawable/ic_person"
                    app:tint="@color/taxi_yellow" />
            </LinearLayout>

            <!-- Affichage Digital TARIF (7 segments) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/digital_display_background"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.2"
                    android:text="TARIF"
                    android:textColor="#66FFFFFF"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvTotalFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/digital_7"
                    android:letterSpacing="0.08"
                    android:shadowColor="@color/red"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="18"
                    android:text="00.00"
                    android:textColor="@color/red"
                    android:textSize="56sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.3"
                    android:text="DH"
                    android:textColor="#88FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Distance et Temps -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <!-- Distance -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/digital_display_background"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.15"
                        android:text="DISTANCE"
                        android:textColor="#66FFFFFF"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/digital_7"
                        android:letterSpacing="0.05"
                        android:shadowColor="@color/red"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="12"
                        android:text="00.00"
                        android:textColor="@color/red"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="KM"
                        android:textColor="#66FFFFFF"
                        android:textSize="9sp" />
                </LinearLayout>

                <!-- Temps -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/digital_display_background"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:letterSpacing="0.15"
                        android:text="TEMPS"
                        android:textColor="#66FFFFFF"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/digital_7"
                        android:letterSpacing="0.08"
                        android:shadowColor="@color/red"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="12"
                        android:text="00:00"
                        android:textColor="@color/red"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="MIN"
                        android:textColor="#66FFFFFF"
                        android:textSize="9sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Mode et Vitesse -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/status_background"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTariffMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.12"
                    android:shadowColor="@color/green"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:text="MODE: JOUR"
                    android:textColor="@color/green"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.08"
                    android:text="VITESSE: 0 KM/H"
                    android:textColor="#99FFFFFF"
                    android:textSize="9sp" />
            </LinearLayout>

            <!-- Tarifs -->
            <TextView
                android:id="@+id/tvRates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:text="Base: 7 DH | Jour: 7.50/km | Nuit: 9.50/km | Attente: 15/h"
                android:textColor="#55FFFFFF"
                android:textSize="8sp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Boutons de Contrôle -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E6000000"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Bouton DÉMARRER (visible au début) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStart"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="monospace"
                android:letterSpacing="0.15"
                android:text="DÉMARRER"
                android:textSize="17sp"
                android:textStyle="bold"
                app:backgroundTint="@color/green"
                app:cornerRadius="12dp" />

            <!-- Boutons STOP et RESET (cachés au début) -->
            <LinearLayout
                android:id="@+id/layoutStopReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStop"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.15"
                    android:text="STOP"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/red"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReset"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:letterSpacing="0.15"
                    android:text="RESET"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/blue"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <!-- Status -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:letterSpacing="0.12"
                android:text="PRÊT"
                android:textColor="@color/taxi_yellow"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>